<%= render partial: "layouts/nav", locals: {tab: "home"}%>
<%= stylesheet_link_tag 'application', media: 'all' %>

<div class="modal modal-sheet position-static d-block py-5" tabindex="-1" role="dialog" id="modalSheet">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow">
      <div class="modal-header border-bottom-0">
        <h1 class="modal-title fs-5">Reset Password</h1>
      </div>
      <div class="modal-footer flex-column border-top-0">
        <%= form_with(url: reset_password_path, class: "forgot-password-form") do |f| %>
            <div class="form-floating mb-3">
                <%= f.text_field :new_password, type: "password", class: "form-control", id: "new-password", placeholder: "nOtApAaSsWoRd" %>
                <%= f.label "New Password", for: "new-password" %>
            </div>
            <div class="form-floating mb-3">
                <%= f.text_field :confirm_password, type: "password", class: "form-control", id: "confirm-password", placeholder: "nOtApAaSsWoRd" %>
                <%= f.label "Confirm Password", for: "confirm-password" %>
            </div>
        <%= f.submit "Reset Password", class: "btn btn-lg btn-dominant w-100 mx-0 mb-2"%>
        <% end %>
        </div>
    </div>
  </div>
</div>

<%= render "layouts/footer"%>
