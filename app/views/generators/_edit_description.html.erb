<%= turbo_frame_tag :description_field do %>
    <div class="row">
        <%= form_with(url: update_description_path(@generator.id), method: :post) do |f| %>
            <%= f.text_area "description_content", class: "form-control", rows: "3", value: (@generator.description || ""), 
            placeholder: "Add your description here..." %>
            <div class="update-comment-button-container">
                <%= f.submit "Save", id: "update_comment_button", class: "btn btn-auxiliary" %>
            </div>
        <% end %>
        <%= form_with(url: cancel_update_description_path(@generator.id), method: :get) do |f| %>
            <div class="cancel-update-comment-button-container">
                <%= f.submit "Cancel", id: "cancel_description_update_button", class: "btn btn-dominant" %>
            </div>
        <% end %>
    </div>
<% end %>