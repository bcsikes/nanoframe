<head>
    <title>NanoFrame</title>
    <%= render "layouts/scripts"%>
    <%= stylesheet_link_tag 'application', media: 'all' %>
</head>

<body>
    <input type="hidden" id="raw-graph-container" value="<%= @raw_graph_json %>">
    <input type="hidden" id="graph-container" value="<%= @graph_json %>">
    <input type="hidden" id="sets-container" value="<%= @vertices %>">
    <input type="hidden" id="scaffold-container" value="<%= @scaffold %>">


    <div class="menu-items">
        <ul class="nav nav-tabs justify-content-end">
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active nanofont" href="/nanobot">The NanoBot</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/miscellaneous">Miscellaneous</a>
            </li>
        </ul>
    </div>

    <div class="row outer-menu-container">
        <div class="col-md-6">
            <div class="back-container">
                <a class="generator-arrow backbtn btn btn-link" href="/nanobot/<%= @generator.id%>/visualize">&larr;
                    Visualize</a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="forward-container">
                <a class="route-arrow btn btn-link" href="/nanobot/<%= @generator.id%>/synthesize">Synthesize &rarr;</a>
            </div>
        </div>
    </div>

    <div class="routing-controls">

    </div>
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <div class="up-button-container">
                <button id="up-key-button" class="arrowbtn arrowbtn-up"></button>
            </div>
        </div>
        <div class="col-md-4">
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <div class="left-key-container">
                <button id="left-key-button" class="arrowbtn arrowbtn-left"></button>
            </div>
        </div>
        <div class="col-md-10">
            <div class="router-container">
                <div class="datGUIRouting"></div>
                <canvas id="router-webgl"></canvas>
            </div>
        </div>
        <div class="col-md-1">
            <div class="right-key-container">
                <button id="right-key-button" class="arrowbtn arrowbtn-right"></button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <div class="down-butoon-container">
                <button id="down-key-button" class="arrowbtn arrowbtn-down"></button>
            </div>
        </div>
        <div class="col-md-4">
        </div>
    </div>
    <div class="table-container">
        <div class="row">
            <div class="col-md-8">
                <h2>Staple Strands Sequences</h2>
            </div>
            <div class="col-md-4 staple-download">
                <%= form_tag download_staples_path, method: :post do %>
                <%= hidden_field_tag "staples", "", id: "staples_field" %>
                <%= hidden_field_tag "descriptions", "", id: "staples_descriptions_field" %>
                <%= submit_tag "Download", class: "btn btn-outline-primary" %>
                <% end %>
            </div>
        </div>
        <table class="table table-striped col-md-12" id="staples_table">
            <thead>
                <tr>
                    <th>Staple #</th>
                    <th>ID</th>
                    <th>Sequence</th>
                    <th>Length (bp)</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>

    <div value="2" class="container" id="footer">
        <hr class="my-4">

        <div class="footer-copyright text-center py-3">
            <div class="copyright">
                <p>Â© 2021 <a href="https://tilabberkeley.com/">Ti Lab</a> @ Berkeley</p>
            </div>
        </div>
    </div>


    <%= javascript_pack_tag 'routing', 'data-turbolinks-track': 'reload'%>

</body>